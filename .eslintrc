{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.0"
        }
    },
    "plugins": [
        "import",
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1,
                "MemberExpression": 1,
                "outerIIFEBody": 1
            }
        ],
        "jsx-a11y/anchor-has-content" : 0,
        "arrow-parens": 0,
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs": "error",
        "no-continue": 0,
        "no-console": 0,
        "no-plusplus": 0,
        "consistent-return": 1,
        "max-len": [
            "warn",
            120,
            {
                "ignorePattern": ""
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "react/prefer-stateless-function": "warn",
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": [
            "error",
            "tab"
        ],
        "react/react-in-jsx-scope": "error"
    }
}